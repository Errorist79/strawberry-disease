# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=strawberry_disease
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# Model Configuration
YOLO_MODEL_PATH=models/weights/best.pt
YOLO_CONFIDENCE_THRESHOLD=0.25
YOLO_IOU_THRESHOLD=0.45

# Camera Configuration
CAMERA_CAPTURE_INTERVAL_MINUTES=10
IMAGE_STORAGE_PATH=data/images

# Risk Calculation
RISK_AGGREGATION_INTERVAL_HOURS=1
HIGH_RISK_THRESHOLD=70
MEDIUM_RISK_THRESHOLD=40

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TOKEN=your_secure_api_token
API_TITLE="Strawberry Disease Detection API"

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_ALERT_THRESHOLD=70
TELEGRAM_NOTIFICATION_COOLDOWN_MINUTES=60

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
